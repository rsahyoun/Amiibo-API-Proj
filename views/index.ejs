<%- include("partials/header.ejs") %>

<!DOCTYPE html>
<html>    
    <body>
        <h1>Amiibo Info Site</h1>
        <h2>Welcome to Ryan's Amiibo Archive </h2>

        <div class="container">
            <h1>Nintendo Amiibo Search</h1>
            <label for="amiibo-select">Select an Amiibo:</label>

            <!-- Filter Dropdown -->
            <form id="filter-form" action="/filter" method="get">
                <label for="filter-select">Select a Filter Type:</label>
                <select id="filter-select" name="filterType">
                    <option value="all">All</option>
                    <option value="figure">Figure</option>
                    <option value="card">Card</option>
                    <option value="yarn">Yarn</option>
                </select>
                <button type="submit">Apply Filter</button>
            </form>
            

            <!-- Amiibo Selection DropDown-->
            <form id="amiiboForm" action="/amiibo" method="get">
                <select name="name" id="amiiboSelect">
                    <% amiibos.sort((a, b) => a.name.localeCompare(b.name)).forEach(function(amiibo) { %>
                        <option value="<%= amiibo.name %>" data-type="<%= amiibo.type %>"><%= amiibo.name %></option>
                    <% }); %>
                </select>
                <button type="submit">Get Amiibo Info</button>
            </form>
            
            
        
            

            <div>
                <form id="info-form" action="/info" method="get"></form>
                <button type="submit" id="site-info" action="">Page Info</button>
            </div>
        </div>
    
        <script src="" async defer></script>
    </body>
</html>

<%- include("partials/footer.ejs") %>